{
  "extends": "astro/tsconfigs/strictest",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
    }
  }
}
