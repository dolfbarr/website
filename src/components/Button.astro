---
// eslint-disable-next-line @typescript-eslint/consistent-type-definitions
export interface Props {
  class?: string
  title?: string
  analyticsClick: string
  analyticsTitle?: string
}

const {
  class: className,
  analyticsClick,
  analyticsTitle,
  title,
  ...attrs
} = Astro.props
---

<button
  class:list={[
    'hover:border-transparent hover:bg-primary hover:text-white dark:hover:bg-primary-dark dark:hover:text-white',
    'focus:border-transparent focus:ring-2',
    'active:bg-primary active:text-white active:brightness-75 dark:active:bg-primary-dark dark:active:text-white',
    'rounded border border-primary dark:border-primary-dark',
    'bg-white px-2 text-primary transition-colors active:brightness-90 dark:bg-stone-900 dark:text-primary-dark',
    'disabled:border-gray-500 disabled:text-gray-500 disabled:hover:border-solid disabled:hover:bg-transparent disabled:dark:border-gray-400 disabled:dark:text-gray-400',
    className ?? '',
  ]}
  data-goatcounter-click={analyticsClick}
  data-goatcounter-title={analyticsTitle ?? title}
  title={title}
  {...attrs}>
  <slot />
</button>
