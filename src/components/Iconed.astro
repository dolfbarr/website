---
// eslint-disable-next-line @typescript-eslint/consistent-type-definitions
export interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<span class:list={['inline-block ', className ?? '']}>
  <span class="icon relative top-[1px] mr-1 inline-block">
    <slot name="icon" />
  </span>
  <slot />
</span>

<style lang="scss" is:inline>
  .icon {
    max-width: 0.8em;
    max-height: 0.8em;
  }

  .icon > * {
    stroke: currentcolor;
    width: 100%;
    height: 100%;
  }
</style>
