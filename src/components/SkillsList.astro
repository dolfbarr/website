---
import { SEPARATOR } from '@utils/data'
// eslint-disable-next-line @typescript-eslint/consistent-type-definitions
export interface Props {
  class?: string
  skills: string[]
}

const { class: className, skills } = Astro.props
---

<p
  class:list={[
    'flex flex-wrap justify-start gap-1 font-extralight leading-tight dark:text-gray-300',
    className ?? '',
  ]}>
  <slot name="prepend" />
  {
    skills.map((skill, index) => (
      <span data-testid="skill" class="rounded-full py-0">
        {skill}
        {index !== skills.length - 1 && (
          <span class="inline-flex pl-1">{SEPARATOR}</span>
        )}
      </span>
    ))
  }
  <slot name="append" />
</p>
